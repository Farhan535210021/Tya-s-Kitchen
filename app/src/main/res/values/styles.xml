<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="colorAccent">@color/design_default_color_secondary</item>
    </style>


    <style name="TextInputLayoutHint" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputEditTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Overlay for the AppBar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
</resources>
